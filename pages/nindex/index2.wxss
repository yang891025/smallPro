/* pages/nindex/index2.wxss */

.home-wrap {
  background: #f2f2f2;
}

.banner {
  width: 100%;
}

.banner text {
  position: absolute;
  bottom: 5%;
  left: 15%;
  transform: translateX(-50%);
  padding: 5rpx;
  color: #333;
  font-size: 18px;
}

.scroll-txt {
  text-align: center;
  background: #fff;
  margin: 10rpx 0;
  padding: 10rpx 0 15rpx 0;
  color: #0000ff;
}

.scroll-ads {
  text-align: center;
  font-size: 14px;
}

.ads-list {
  display: flex;
  flex-direction: row;
  flex: 1;
  margin-bottom: 1rpx;
}

.ads-item {
  flex: 1;
}

.sub-banner {
  width: 100%;
  height: 120px;
}

.workbench {
  font-size: 16px;
  background: #fff;
  padding-bottom: 10rpx;
  margin-bottom: 20rpx;
  color: #333;
}

.workbench .title {
  font-size: 18px;
  padding: 10rpx 10rpx;
  margin-bottom: 20rpx;
  display: block;
}

.workbench .list {
  width: 100%;
  /* display: flex; *//* flex-direction: row;
  flex:1; */
}

.workbench .items {
  width: 33%;
  text-align: center;
  display: inline-block;
  margin-bottom: 35rpx;
  /* width: 100rpx;
  flex:1;
  text-align: center; */
}

.workbench .items image {
  width: 120rpx;
  height: 120rpx;
  justify-content: center;
}

.workbench .items text {
  display: block;
  text-align: center;
  margin-top: 10rpx;
}
