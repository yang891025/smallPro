<view class="page">
  <view class="page__bd">
    <view class="weui-cells">
        <view class="weui-grids">
          <block wx:for="{{grids}}" wx:key="*this">
            <navigator url="{{item.path}}" class="weui-grid" hover-class="weui-grid_active">
              <image class="weui-grid__icon" src="../../images/{{item.img}}" />
              <view class="weui-grid__label">{{item.title}}</view>
            </navigator>
          </block>
        </view>
      </view>
  </view>
</view>