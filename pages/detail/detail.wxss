/* pages/detail/detail.wxss */

.ul {
  background: #fdfdfd;
  padding: 10px;
}

.tag {
  font-size: 14px;
  padding: 3px 0px;
}

.tag .tag_name {
  display: inline-block;
  color: #999;
  width: 50px;
  text-align: right;
}

.tag .tag_dom {
  display: inline-block;
  font-weight: bold;
  color: #09c;
}

.info {
  margin: 10px;
  border: 1px solid #999;
  border-radius: 10px;
  box-shadow: 0px 0px 3px #aaa;
  padding: 7px;
  background: #fcfcfc;
  text-indent: 28px;
}
